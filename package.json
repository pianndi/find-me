{
  "dependencies": {
    "@tailwindcss/cli": "^4.1.5",
    "daisyui": "^5.0.35",
    "live-server": "^1.2.2",
    "tailwindcss": "^4.1.5"
  },
  "type": "module",
  "scripts": {
    "build:css": "npx @tailwindcss/cli -i css/input.css -o ./css/output.css --minify",
    "build:images": "node scripts/compress-images.js",
    "build": "npm run build:css && npm run build:images",
    "dev": "npx concurrently \"npx @tailwindcss/cli -i css/input.css -o ./css/output.css --watch\" \"npx live-server\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "sharp": "^0.33.0",
    "glob": "^10.3.10"
  }
}